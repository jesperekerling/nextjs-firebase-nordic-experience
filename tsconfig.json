{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2020", // Updated target to ES2020 for better compatibility
    "allowSyntheticDefaultImports": true, // Ensure synthetic default imports are allowed
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "strictNullChecks": true, // Enable strict null checks
    "noImplicitAny": true, // Enable no implicit any
    "noUnusedLocals": true, // Enable no unused locals
    "noUnusedParameters": true // Enable no unused parameters
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}